#include "libft.h"

static	size_t numlen (int n)
{
	size_t b;

	b = 0;
	if (n == -2147483648)
		return (11);
	if (!n)
		return (1);
	if (n < 0)
	{
		b++;
		n *= -1;
	}
	while (n > 0)
	{
		n /= 10;
		b++;
	}
	return (b);
}

int main ()
{
	int n = -2147483647 -1;
	printf("%zu", numlen(n));
}
